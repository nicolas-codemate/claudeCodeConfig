{
  "permissions": {
    "allow": [
      "Edit",

      "Bash(git*)",
      "Bash(gh*)",
      "Bash(* && git *)",
      "Bash(* && gh *)",

      "Bash(docker*)",
      "Bash(* && docker *)",

      "Bash(make*)",
      "Bash(yarn*)",

      "Bash(cd *)",
      "Bash(ls*)",
      "Bash(cat *)",
      "Bash(find *)",
      "Bash(grep *)",

      "Read(~/.zshrc)",

      "mcp__jetbrains__find_files_by_name_keyword",
      "mcp__jetbrains__search_in_files_by_text",
      "mcp__jetbrains__get_file_text_by_path",
      "mcp__jetbrains__get_all_open_file_paths",
      "mcp__jetbrains__list_directory_tree",

      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",

      "WebFetch(domain:*.google.com)",
      "WebFetch(domain:*.github.com)",
      "WebFetch(domain:*.githubusercontent.com)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rm -rf /)",

      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",

      "Write(.git/*)",
      "Write(**/package-lock.json)",
      "Write(**/composer.lock)",
      "Write(**/yarn.lock)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"[\" + (now | strftime(\"%Y-%m-%d %H:%M:%S\")) + \"] \" + .tool_input.command' >> ~/.claude/logs/bash-commands.log 2>/dev/null || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/play-sound.js done"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/play-sound.js notification"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ~/.claude/hooks/play-sound.js"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline/statusline.sh"
  }
}
